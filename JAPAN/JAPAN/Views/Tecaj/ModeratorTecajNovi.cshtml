@model JAPAN.ViewModels.NoviTecajViewModel
@{
    ViewData["Title"] = "Novi";
}

<h4>Novi tecaj</h4>
<hr />
<div class="row">
    <div>
        <form asp-action="ModeratorNovo" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <textarea asp-for="Opis" class="form-control"></textarea>
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sadrzaj" class="control-label"></label>
                <textarea asp-for="Sadrzaj" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Sadrzaj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TezinaId" class="control-label">Težina</label>
                <select asp-for="TezinaId" class="form-control" asp-items="ViewBag.Tezine"></select>
                <span asp-validation-for="TezinaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipSadrzajaId" class="control-label">Tip Sadržaja</label>
                <select asp-for="TipSadrzajaId" class="form-control" asp-items="ViewBag.TipoviSadrzaja"></select>
                <span asp-validation-for="TipSadrzajaId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Stvori novi tecaj" class="btn btn-primary" />
                <a asp-action="ModeratorTecaji" class="btn btn-secondary">Odustani</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model JAPAN.ViewModels.UrediIspitViewModel

@{
    ViewData["Title"] = "Uredi Ispit";
}

<h1 class="my-4">Uredi Ispit</h1>

<form id="updateIspitForm" asp-action="Uredeno" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Naziv" class="control-label">Naziv</label>
        <input asp-for="Naziv" class="form-control" />
        <span asp-validation-for="Naziv" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Opis" class="control-label">Opis</label>
        <textarea asp-for="Opis" class="form-control" rows="2"></textarea>
        <span asp-validation-for="Opis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TezinaId" class="control-label">Težina</label>
        <select asp-for="TezinaId" class="form-control" asp-items="ViewBag.Tezine"></select>
        <span asp-validation-for="TezinaId" class="text-danger"></span>
    </div>
    <div id="pitanjaContainer">
        <div class="form-group">
            <label>Pitanja</label>
            <select multiple asp-for="PitanjaId" class="form-control" asp-items="ViewBag.Pitanja"></select>
            <span asp-validation-for="PitanjaId" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Spremi promjene" class="btn btn-primary" />
        <a asp-action="ModeratorIspiti" class="btn btn-secondary">Odustani</a>
    </div>
</form>
